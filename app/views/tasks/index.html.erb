<div>
  <h1>My Tasks</h1>
    <ul>
        <% @tasks.each do |task| %>
            <% if task.completed == false%>
            <li><i class="far fa-square"></i>    <%=link_to task.title, task_path(task) %>    <%=link_to "Update task", edit_task_path(task) %> <%=link_to "Delete task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
            <% else %>
            <li><i class="far fa-check-square"></i>    <%=link_to task.title, task_path(task)%>    <%=link_to "Update task", edit_task_path(task) %> <%=link_to "Delete task", task_path(task), method: :delete, data: { confirm: "Are you sure?" }%></li>
            <% end %>
        <% end %>
    </ul>
</div>
<%=link_to "Create a new task", new_task_path %>
